<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/main_padding_top"
    android:paddingRight="@dimen/main_padding_right"
    android:paddingBottom="@dimen/main_padding_bottom"
    android:paddingLeft="@dimen/main_padding_left"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
  >

  <LinearLayout
    android:id="@+id/topPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_alignParentTop="true"
  >
    <LinearLayout
      android:id="@+id/clockPanel"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="horizontal"
    >
      <EditText
        android:id="@+id/hoursField"
        android:text="00"
        style="@style/ClockEditTextStyle"
      />
      
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        style="@style/ClockSeparatorTextStyle"
      />
      
      <EditText
        android:id="@+id/minutesField"
        android:text="00"
        style="@style/ClockEditTextStyle"
      />
    </LinearLayout>
    
    
    <LinearLayout
      android:id="@+id/alarmPresetsPanel"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="horizontal"
    >
      <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
      >
        <LinearLayout
          android:layout_row="0"
          android:layout_column="0"
        >
          <TextView
            android:id="@+id/alarmPresetText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/alarm_preset_padding_right"
            android:text="21:30"
            style="@style/AlarmPresetTextStyle"
          />
        </LinearLayout>

        <LinearLayout
          android:layout_row="0"
          android:layout_column="1"
        >
          <TextView
            android:id="@+id/alarmPresetText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/alarm_preset_padding_left"
            android:text="12:00"
            style="@style/AlarmPresetTextStyle"
          />
        </LinearLayout>

        <LinearLayout
          android:layout_row="1"
          android:layout_column="0"
        >
          <TextView
            android:id="@+id/alarmPresetText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/alarm_preset_padding_right"
            android:text="09:00"
            style="@style/AlarmPresetTextStyle"
          />
        </LinearLayout>

        <LinearLayout
          android:layout_row="1"
          android:layout_column="1"
        >
          <TextView
            android:id="@+id/alarmPresetText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/alarm_preset_padding_left"
            android:text="07:15"
            style="@style/AlarmPresetTextStyle"
          />
        </LinearLayout>
      </GridLayout>
    </LinearLayout>

  </LinearLayout>
  
  
  <LinearLayout
    android:id="@+id/soundSelector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:orientation="horizontal"
    android:layout_below="@+id/topPanel"
    android:gravity="center_vertical"
    android:paddingTop="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:background="@drawable/plain_pref_background_enabled"
  >
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_volume_up_black_18dp"
      android:tint="#777"
    />
    
    <View
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_marginRight="6dp"
      android:layout_marginLeft="6dp"
      android:background="#888"
    />
    
    <TextView
      android:id="@+id/soundPathView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Default"
      android:textSize="16dp"
    />
  </LinearLayout>


  <LinearLayout
    android:id="@+id/soundFolderSelector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_below="@+id/soundSelector"
    android:paddingTop="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:background="@drawable/plain_pref_background_disabled"
  >
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_folder_black_18dp"
      android:tint="#777"
    />
    
    <View
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_marginRight="6dp"
      android:layout_marginLeft="6dp"
      android:background="#888"
    />
    
    <TextView
      android:id="@+id/soundFolderPathView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="[Empty]"
      android:textSize="16dp"
    />
  </LinearLayout>
  

  <LinearLayout
    android:id="@+id/settingsPanel"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_below="@+id/soundFolderSelector"
  >
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:gravity="center"
    >
      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
      >
        <Spinner
          android:id="@+id/volumeSelector"
          android:layout_width="@dimen/settings_button_width"
          android:layout_height="match_parent"
          android:background="@drawable/settings_spinner_background"
          android:dropDownVerticalOffset="-3dp"
        />
        
        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="left|center_vertical"
          android:layout_marginLeft="18dp"
          android:src="@drawable/ic_equalizer_black_24dp"
          android:tint="#666"
        />
      </FrameLayout>
    </LinearLayout>
    
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:gravity="center"
    >
      <ImageButton
        android:id="@+id/bSnooze"
        android:layout_width="@dimen/settings_button_width"
        android:layout_height="match_parent"
        android:src="@drawable/ic_snooze_black_36dp"
        android:tint="#777"
        android:background="@drawable/toggle_button_disabled"
      />
    </LinearLayout>
    
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:gravity="center"
    >
      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
      >
        <Spinner
          android:id="@+id/snoozeTimeSelector"
          android:layout_width="@dimen/settings_button_width"
          android:layout_height="match_parent"
          android:background="@drawable/settings_spinner_background"
          android:dropDownVerticalOffset="-3dp"
        />
        
        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="left|center_vertical"
          android:layout_marginLeft="14dp"
          android:src="@drawable/ic_snooze_black_24dp"
          android:tint="#666"
        />
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>
  

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/settingsPanel"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="12dp"
  >
    <LinearLayout
      android:id="@+id/panelAlarmState"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:gravity="center"
      android:background="@drawable/alarm_state_panel_background_start"
    >
      <ImageView
        android:id="@+id/imageAlarmWakeupAnimation"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/avd_clock_alarm"
        android:tint="#f3f3f3"
        android:visibility="gone"
      />
    </LinearLayout>
  </LinearLayout>
  
  
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
  >
    <requestFocus/>
  </LinearLayout>
  
</RelativeLayout>
