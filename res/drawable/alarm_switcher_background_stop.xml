<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/alarm_switcher_radius" />
      <solid android:color="@color/alarm_switcher_stop_pressed"/>
    </shape>
  </item>
  
  <item>
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/alarm_switcher_radius" />
      <solid android:color="@color/alarm_switcher_stop_default"/>
    </shape>
  </item>
</selector>

